<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPostText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Напишите ваше сообщение..."
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:gravity="start|top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPostText"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ibAddImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_add_a_photo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Добавить фото"/>

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@mipmap/ic_launcher"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>